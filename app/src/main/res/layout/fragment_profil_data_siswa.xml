<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilSiswaFragment">

    <ImageView
        android:id="@+id/img_profil_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nama_profil_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/yrsa"
        android:textSize="20sp"
        android:textColor="@color/blackTextView"
        android:text="Satria Putra Mahendra"
        app:layout_constraintEnd_toEndOf="@+id/img_profil_siswa"
        app:layout_constraintStart_toStartOf="@+id/img_profil_siswa"
        app:layout_constraintTop_toBottomOf="@+id/img_profil_siswa" />

    <TextView
        android:id="@+id/tv_profil_data_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yrsa"
        android:text="Data Siswa"
        android:textColor="@color/blackTextView"
        app:layout_constraintEnd_toStartOf="@+id/tv_nama_profil_siswa"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_profil_siswa" />

</androidx.constraintlayout.widget.ConstraintLayout>